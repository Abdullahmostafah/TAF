### === WHITELISTED FILES === ###
# Build Config
!/.gitignore
!/pom.xml
!/build.gradle
!/mvnw
!/mvnw.bat
!/gradlew
!/gradlew.bat

# Framework Configs
!/allure*.bat
!/allure.properties
!/extent.properties
!/cucumber.properties
!/testng.xml
!/junit-platform.properties

# Test Resources
!/*.feature           # Cucumber feature files
!/src/                # All source code
!/src/test/           # Explicitly include test directory
!/resources/          # Test resources

# Sample Configs
!/config-sample.properties
!/env.example

# Documentation
!/README.md
!/LICENSE